<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="ueh.quanlynhansuapp.LoginController">

    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="40">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="ĐĂNG NHẬP HỆ THỐNG" />
            
            <HBox spacing="10">
                <Label prefWidth="100" text="Mã NV:" />
                <TextField fx:id="txtMaNV" promptText="Nhập mã nhân viên..." />
            </HBox>

            <HBox spacing="10">
                <Label prefWidth="100" text="Mật khẩu:" />
                <PasswordField fx:id="txtMatKhau" promptText="Nhập mật khẩu..." />
            </HBox>

            <Button defaultButton="true" onAction="#handleLogin" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold;" text="Đăng nhập" />
        </VBox>
    </children>
</AnchorPane>
